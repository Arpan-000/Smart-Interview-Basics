#include <bits/stdc++.h>
using namespace std;

int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    int N; 
    cin>>N; 
    for(int i  =1 ; i<=N;i++) 
     { 
          for(int j =N;j>=1;j--) 
           { 
                if(j==i) 
                 cout<<"*"; 
                 else
                  cout<< j;
           } 
           cout<<endl;
     }
    return 0;
}
