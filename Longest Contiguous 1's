#include <bits/stdc++.h>
using namespace std;

int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
   int n ,maxcount=0;
    scanf("%d",&n);  
    int a[n],max,count,b[n];
    for(int i =0;i<n;i++)
     {   
          scanf("%d",&a[i]);  
     }
     for(int i =0;i<n;i++) {  
            if(a[i]==1) 
              count++;
              else 
               count =0;
           if(count>maxcount){ 
                maxcount = count;
           } 

         } 
       
       
      
printf("%d",maxcount);
    return 0;
}
