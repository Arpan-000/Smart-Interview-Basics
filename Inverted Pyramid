#include <bits/stdc++.h>
using namespace std;

int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    int n;
    cin>>n; 
     for(int i = n; i>0;i--) 
      { 
           for(int j=0;j<i;j++) 
            {   if(j==0||j==i-1||i==n)
                 cout<<"* "; 
                 else 
                  cout<<"  "; 
            }
            printf("\n");
          }
    return 0;
}
