#include <bits/stdc++.h>
using namespace std;

int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
  int w,l;
    scanf("%d%d",&w,&l); 
    for(int i=0;i<l;i++) 
     {    if(i==0||i==l-1){
          for(int j =0;j<w;j++) 
            {  
                 
                 printf("*");
            }
            } 
            else 
             { 
                  printf("*"); 
                  for(int j =1;j<w-1;j++){ 
                       printf(" ");
                  }
               
             printf("*"); 
             } 
             printf("\n");
     
     
     }
    return 0;
}
